<h1>Productos en Tiempo Real</h1>
<ul id="products-list">
  {{#each products}}
    <li>
      <div style="display:flex;align-items:center;">
{{#if thumbnails.[0]}}
  <img src="{{thumbnails.[0]}}" alt="{{title}}" style="width:100px;height:auto;margin-right:10px;">
{{else}}
  <img src="https://via.placeholder.com/100x100?text=Sin+Imagen" alt="Sin imagen" style="width:100px;height:auto;margin-right:10px;">
{{/if}}
        <strong>{{title}}</strong> - {{description}} - ${{price}}
      </div>
      <button class="delete-btn" data-id="{{id}}">Eliminar</button>
    </li>
  {{/each}}
</ul>

<h2>Agregar Producto</h2>
<form id="product-form">
  <input type="text" name="title" placeholder="Título" required>
  <input type="text" name="description" placeholder="Descripción" required>
  <input type="text" name="code" placeholder="Código" required>
  <input type="number" name="price" placeholder="Precio" required>
  <input type="number" name="stock" placeholder="Stock" required>
  <input type="text" name="category" placeholder="Categoría" required>
  <input type="text" name="thumbnails" placeholder="URL de la imagen" required>
  <button type="submit">Agregar</button>
</form>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtime.js"></script>
